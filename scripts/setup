#!/bin/sh
set -e

echo "Step 1/2: Setting up a python virtualenv"
if [ ! "${CI}" = "true" ] # Skip when running Travis
then
  virtualenv .
  . ./bin/activate
fi

echo "Step 2/2: Installing python packages"

python setup.py install
pip install pep8
pip install coverage
pip install coveralls


if [ ! "${CI}" = "true" ] # Skip when running Travis
then
  deactivate
fi
